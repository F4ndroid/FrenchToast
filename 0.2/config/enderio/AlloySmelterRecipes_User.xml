<!--
  Custom recipes that will not be over written by Ender IO are added here. Examples of recipes can be found in the
  AlloySmelterRecipes_Core.xml and general format documentation in the SAGMillRecipes_Core/User.

  As well as adding custom recipes to the operation of the Alloy Smelter, a vanilla furnace recipe can be controlled.
  It can be disabled completely by simply adding this line:

  <vanillaFurnaceRecipes enabled="false" />

  It is also possible to selectively disable vanilla furnace recipes. The following example disables the smelting of iron
  ingots, ender pearls, and any form of iron ore registered in the ore dictionary.

  <vanillaFurnaceRecipes>

	<exclude>
      <itemStack modID="minecraft" itemName="iron_ingot" />
      <itemStack modID="minecraft" itemName="ender_pearl" />
      <itemStack oreDictionary="oreIron" />
    </exclude>

  </vanillaFurnaceRecipes>

  Add this line to disable the creation of TE alloys using the Alloy Smelter.

  <recipeGroup name="Thermal Expansion" enabled="false" />

-->

<AlloySmelterRecipes>
    
    <recipeGroup name="French Tweaks" enabled="true">
    
    <recipe name="Brass" energyCost="1000">
        <input>
            <itemStack oreDictionary="ingotCopper" number="3" />
            <itemStack oreDictionary="ingotZinc" />
        </input>
        <output>
            <itemStack oreDictionary="ingotBrass" number="4" exp="0.5" />
        </output>
    </recipe>
    
    <recipe name="Aluminium Brass" energyCost="1000">
        <input>
            <itemStack oreDictionary="ingotCopper" number="2" />
            <itemStack oreDictionary="ingotZinc" number="1" />
            <itemStack oreDictionary="ingotAluminum" number="1" />
        </input>
        <output>
            <itemStack oreDictionary="ingotAlubrass" number="4" exp="0.5" />
        </output>
    </recipe>
    
    <recipe name="Luminous Pearl" energyCost="1500">
        <input>
            <itemStack oreDictionary="enderpearl" />
            <itemStack oreDictionary="dustGlowstone" />
        </input>
        <output>
            <itemStack modID="correlatedpotentialistics" itemName="misc" itemMeta="3" exp="0.5" />
        </output>
    </recipe>

    <recipe name="Enderium" energyCost="2500">
        <input>
            <itemStack oreDictionary="ingotEnderiumBase" />
            <itemStack oreDictionary="enderpearl" />
        </input>
        <output>
            <itemStack oreDictionary="ingotEnderium" exp="1.0" />
        </output>
    </recipe>

    <recipe name="Bronze" energyCost="1500">
        <input>
            <itemStack oreDictionary="ingotCopper" number="3" />
            <itemStack oreDictionary="ingotTin" />
        </input>
        <output>
            <itemStack modID="substratum" itemName="ingot" itemMeta="2" number="4" exp="0.5" />
        </output>
    </recipe>
    
    <recipe name="Steel" energyCost="1500">
        <input>
            <itemStack oreDictionary="ingotIron" />
            <itemStack oreDictionary="dustCoal" />
        </input>
        <output>
            <itemStack modID="substratum" itemName="ingot" itemMeta="9" exp="1.0" />
        </output>
    </recipe>
    
    <recipe name="Manyullun" energyCost="3000">
        <input>
            <itemStack oreDictionary="ingotCobalt" />
            <itemStack oreDictionary="ingotArdite" />
        </input>
        <output>
            <itemStack modID="tconstruct" itemName="ingots" itemMeta="2" exp="2.0" />
        </output>
    </recipe>
    
    <recipe name="Sun Crystal" energyCost="4000">
        <input>
            <itemStack oreDictionary="gemDiamond" />
            <itemStack oreDictionary="dustGlowstone" number="4" />
        </input>
        <output>
            <itemStack modID="extrautils2" itemName="SunCrystal" exp="5.0" />
        </output>
    </recipe>

    <recipe name="Sun Crystal" energyCost="4000">
        <input>
            <itemStack modID="extrautils2" itemName="DecorativeGlass" itemMeta="0" />
            <itemStack oreDictionary="dustGlowstone" number="2" />
        </input>
        <output>
            <itemStack modID="extrautils2" itemName="DecorativeGlass" itemMeta="4" exp="0.5" />
        </output>
    </recipe>

    </recipeGroup>

</AlloySmelterRecipes>
